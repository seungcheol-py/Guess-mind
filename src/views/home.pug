<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        title Guess Mind
    body
        .loginBox
            form#jsLogin
                input(type="text", placeholder="What's your nickname?")
        .gameContainer#jsGame
            .main
                .Notif
                    #jsNotif
                    .Timer#jsTimer
                canvas.canvas#jsCanvas
                .controls#controls
                    button#mode Fill
                    input(type="range", id='brushRange' min='0.1' max='5.0' value='2.5' step='0.1')
                    .colors
                        .color.jsColor(style="background-color:rgb(0, 0, 0)")
                        .color.jsColor(style="background-color:rgb(255,255,255)")
                        .color.jsColor(style="background-color:rgb(255,59,48)")
                        .color.jsColor(style="background-color:rgb(255,149,0)")
                        .color.jsColor(style="background-color:rgb(255,204,0)")
                        .color.jsColor(style="background-color:rgb(76,217,100)")
                        .color.jsColor(style="background-color:rgb(90,200,250)")
                        .color.jsColor(style="background-color:rgb(0,122,255)")
                        .color.jsColor(style="background-color:rgb(88,86,214)")
            .chat
                .player__board#jsPlayerBoard
                ul.chat__message#jsMessage
                form.chat__form#jsMessageForm
                    input(tpye="text", placeholder="Write a message")
        script
            |window.events=!{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")
